{
    "compilerOptions": {
        "outDir": "dist",
        "lib": ["ES2020"],
        "target": "ES2020",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": ["node"],
        "esModuleInterop": true,
        "module": "commonjs",
        "strict": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "tsconfig.json"]
}